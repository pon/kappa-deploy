{
  "servers": [
    {
      "host": "0.0.0.0",
      "port": "8080",
      "options": {
        "payload": {
          "maxBytes": 10000000
        }
      }
    },
    {
      "host": "0.0.0.0",
      "port": "8443",
      "options": {
        "tls": {
          "requestCert": true,
          "rejectUnauthorized": false,
          "key": "file:./pathtokey",
          "cert": "file:./pathtocert",
          "ca": "file:./pathtoca"
        },
        "payload": {
          "maxBytes": 10000000
        }
      }
    }
  ],
  "plugins": {
    "kappa": {
      "vhost": "registry.myorg.com",
      "paths": [
        "http://localhost:5984/registry/_design/app/_rewrite/",
        "https://registry.npmjs.org/"
      ]
    }
  }
}
